<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs') %>
</head>
<body> 
      <%- include('../partials/nav.ejs') %>

      <div class="container">
        <div class="row mt-3">
          <% if(req.originalUrl !== "/"){ %>
            <%- include('../partials/navigation.ejs')%>
          <% }else{ %>
          <div class="col-lg-12 mb-5">
            <img src="/image_main.jpg"/>
          </div>
         <%}%>
         
          <div class="col-lg-12 mb-3">
            <h1> <%= text %> </h1>
            <% if(books.length === 1){ %>
              <span class="book-autor px-3">Znaleziono <%= books.length %> produkt </span>
            <%}else if(books.length < 5 && books.length !== 0){ %>%>
              <span class="book-autor px-3">Znaleziono <%= books.length %> produkty  </span>
            <% }else{ %>
              <span class="book-autor px-3">Znaleziono <%= books.length %> produkt√≥w  </span>
            <% }%>%>
            
          </div>
          <% books.forEach(function(book) { %>
              <%- include('../partials/book.ejs' , {book}) %>
          <% }); %>
      </div>
      </div>
      <%- include('../partials/bootstrap.ejs') %>

</body>
</html>