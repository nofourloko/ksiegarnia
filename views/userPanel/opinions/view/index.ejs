<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../../partials/head.ejs') %>
</head>
<body> 
      <%- include('../../../partials/nav.ejs') %>
      <div class="container">
        <div class="row bordered">
          <div class="col-lg-12">
            <h1><strong><i class="bi bi-chat-quote" style="color:#0275d8"></i> Recenzje</strong></h1>
          </div>
      </div>
        <div class="row ">
          <a  class="col-lg-2 m-2 btn btn-secondary" href="/user/account/view_opinions">Twoje recenzje</a>
          <a class="col-lg-2 m-2 btn  btn-outline-secondary" href="/user/account/add_opinions" >Niezrcenzowane</a>
        </div>
        <% opinions.forEach(item => { %>
          <div class="row mt-5 bordered px-5" >
            <div class="col-lg-2" style="margin-right: 50px;">
              <img src="/book.jpg" class="book-image" style="border: none;"/>
            </div>
            <div class="col-lg-9  ml-5">
              <h1 class="book-title"><%= item.Tytuł %></h1>
              <div class="book-meta">
                <span class="book-autor">Autor: <%= item.Autor %> </span>
              </div>
              
              <div style="font-size: 16px;" class="mb-1">
                <% [1,2,3,4,5].forEach(el => { %>
                    <% if(el <= item.ocena){ %>
                        <i class="bi bi-star-fill" style="color: #e8b923;"></i>
                    <%}else{ %>
                <i class="bi bi-star"></i>
                <% } %>
                <% }) %>
            </div>
            <span ><%= item.data_dodania %></span>
            <p><%= item.treść%></p>
              
            </div>
          </div>
        <% }) %>
       
      </div>
      <%- include('../../../partials/bootstrap.ejs') %>
</body>
</html>