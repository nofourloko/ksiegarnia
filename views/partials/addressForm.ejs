<% if (!data) { %>
  <form class="row m-5" action="/user/account/adress/add" method="post">
<% } else{ %>
  <form class="row m-5" action="/user/account/address/change" method="post">
<% } %>
<% if (!no_default) { %>
  <input type="text" name="url" value="<%= original_url %>" style="display: none;"/>
  <% } %>
  <% if (data) { %>
    <input type="text" name="id" value="<%= id %>" style="display: none;"/>
  <% } %>
<div  style="opacity:0;">
  <% if (data && data['domyślny']) { %>
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" name="domyślny" checked>
    <label class="form-check-label" for="flexSwitchCheckDefault">Ustaw jako domyślny</label>
  <% } else if(!no_default){ %>
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" name="domyślny">
    <label class="form-check-label" for="flexSwitchCheckDefault">Ustaw jako domyślny</label>
  <% } %>
  
</div>
<div class="col-lg-6 mt-4">
  <label for="emailInput">Email</label>
  <input type="email" class="form-control" id="emailInput" name="Email" placeholder="Wprowadź swój email"  value="<%= data && data['E-mail'] %>"required>
</div>
<div class="col-lg-6 mt-4">
  <label for="phoneInput">Numer telefonu</label>
  <input type="tel" class="form-control" id="phoneInput" name="Telefon" placeholder="Wprowadź swój numer telefonu" value='<%= data && data.Telefon %>'required>
</div>
<div class="col-lg-6 mt-4">
  <label for="addressInput">Adres</label>
  <input type="text" class="form-control" id="addressInput" name="Ulica" placeholder="Wprowadź ulicę" value='<%= data && data.Ulica %>' required>
</div>
<div class="col-lg-6 mt-4">
  <label for="cityInput">Miasto</label>
  <input type="text" class="form-control" id="cityInput" name="Miasto" placeholder="Wprowadź miasto" value='<%= data && data.Miasto %>' required>
</div>
<div class="col-lg-3 mt-4">
  <label for="stateSelect">Województwo</label>
  <select id="stateSelect" class="form-control" name="Województwo" required>
    <option selected disabled>Wybierz województwo...</option>

    <% provinces.forEach(province => { %>
      <% if (data && data['Województwo'] === province.value) { %>
        <option selected value="<%= province.value %>"><%= province.name %></option>
      <% } else { %>
        <option value="<%= province.value %>"><%= province.name %></option>
      <% } %>
    <% }) %>

  </select>
</div>
<div class="col-lg-3 mt-4">
  <label for="zipInput">Kod pocztowy</label>
  <input type="text" class="form-control" id="zipInput" name="Kod_pocztowy" placeholder="Wprowadź kod pocztowy" value="<%= data && data['Kod pocztowy'] %>"required>
</div>

<!-- Submit Button -->
<div class="col-lg-6 mt-4 d-flex justify-content-center align-items-end">
  <button class="btn btn-danger mx-2" onclick="history.back()">Cofnij</button>
  <button class="btn btn-success" type="submit" style="width: 100%;">Zatwierdź</button>
</div>
<% if (!data) { %>
  </form>
<% } else if(no_default) { %>
  </form>
<% } %>