<% cartItems.forEach(function(book) { %>
    <div class="col-lg-12" >
      <div class="cart-item" >
        <img src="/book.jpg" height="200"/>
        <div class="cart-item-section">
          <h6>Autor i tytuł</h6>
          <span><%= book.Autor %></span>
          <span><%= book.Tytuł %></span>
        </div>
        <div class="cart-item-section">
          <h6>Cena sprzedazy</h6>
          <span><%= book.Cena %> zł</span>
        </div>
        <div class="d-flex" style="gap:10px">
          <button class="btn btn-outline-dark" onclick="changeQuantity('<%= book.id %>', -1,`quantity_span'<%= book.id %>'`)"><i class="bi bi-dash"></i></button>
          <div style="border:1px solid #ddd; padding:10px 20px">
            <span id="quantity_span'<%= book.id %>'"><%= book.quantity %></span>
          </div>
          <button class="btn btn-outline-dark" onclick="changeQuantity('<%= book.id %>', 1,`quantity_span'<%= book.id %>'`)"><i class="bi bi-plus"></i></button>
        </div>
       
        <i class="bi bi-x-circle-fill" style="color: red;" onclick="removeFromCart('<%= book.id %>')"></i>
      </div>
    </div>
  <% }) %>