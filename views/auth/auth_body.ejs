<div class="container">
 <div class="row">
    <div class="col-lg-6 col-sm-12 m-auto" style="display: none;" id="success_div">
        <div class="auth_section_success">
            <span>Logowanie udane</span>
            <i class="bi bi-check-circle-fill success_auth"></i>
        </div>
    </div>
    <form class="col-lg-6 col-sm-12 m-auto" onsubmit="return isEmailValid(event)" method="post" id="form_email">
        <div class="auth-section">
            <div class="d-flex">
                <a class="mb-3 pb-3 heading-text_login" href="/auth" id="current_auth">
                    Logowanie
                </a>
                <a class="mb-3 pb-3 heading-text_login" href="/register">
                    Rejestracja
                </a>
            </div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="emailInput" name="email" placeholder="name@example.com" required>
                <label for="emailInput">E-mail</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="passwordInput" name="password" placeholder="password" required>
                <label for="passwordInput">Has≈Ço</label>
            </div>
            <button class="btn btn-success m-auto" type="submit">Dalej</button>
        </div>
    </form>
</div>   
</div>

